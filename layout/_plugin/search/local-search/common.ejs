<!-- import load local-search -->
<% if (theme.vendors.suka.local_search_js) { %>
    <script src="<%= theme.vendors.suka.local_search_js %>"></script>
<% } else { %>
    <script src="<%- url_for('js/local-search.min.js') %>"></script>
<% } %>

<script>
    (function () {
        var searchNoResult = '';
        searchNoResult += '<div class="search-noresult"><span><%= __('search.noresult') %>'
        searchNoResult += '<br><%= __('search.trygoogle') %>&nbsp;:&nbsp;</span>'
        searchNoResult += '<a href="https://www.google.com/search?&q=' + window.getParameterByName('s') + '%20site:<%= config.url %>" target="_blank">' + window.getParameterByName('s') + '&nbsp;site:<%= config.url %></a></div>'
        window.searchFunc('<%= url_for(config.suka_theme.search.path) %>', searchNoResult);
    })();
</script>
